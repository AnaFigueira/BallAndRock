<Page
    x:Class="BallAndRock.MessageInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BallAndRock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" FontFamily="Segoe UI Light">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Ball and Rock" VerticalAlignment="Center" FontSize="56" Margin="0" Grid.Row="0" />
        <TextBlock x:Name="uiTbTitle" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock"  VerticalAlignment="Center" FontSize="48" Margin="0" Foreground="#FF990000" Grid.Row="1" />
        <TextBlock x:Name="uiTbMessage" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="36" Margin="0,15,0,0" Grid.Row="2" />
    </Grid>
</Page>